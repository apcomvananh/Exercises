<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 600 Essential words for the TOEIC</title>
    @Styles.Render("~/Content/admincss")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-inverse" role="navigation">
            <nav class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".admin-menu">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Admin", new { area = "Admin"}, null)" class="navbar-brand">Admin</a>
            </nav>
        </nav>
        <ul class="nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @User.Identity.Name <b class="caret"></b></a>
                <ul class="dropdown-menu user-dropdown">
                    <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                </ul>
            </li>
        </ul>
        <div class="collapse navbar-collapse admin-menu">
            <ul class="nav navbar-nav side-nav">
                <li>
                    <a href="@Url.Content("~/")"><i class="glyphicon glyphicon-arrow-left"></i> Main Site</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Admin", new { area = "Admin" })">
                        <i class="fa fa-fw fa-dashboard"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a href="#" data-toggle="collapse" data-target="#membership">
                        <i class="glyphicon glyphicon-user"></i> Membership <i class="glyphicon glyphicon-chevron-down"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>