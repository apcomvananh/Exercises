<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/admincss")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Admin", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <ul class="nav navbar-right top-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i> @User.Identity.Name <b class="caret"></b></a>
                        <ul class="dropdown-menu user-dropdown">
                            <li>@Html.ActionLink("Logout", "Logout", "Account", new { area = string.Empty }, null)</li>
                        </ul>
                    </li>
                </ul>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav side-nav">
                        <li>
                            <a href="@Url.Action("Index", "Admin", new { area = "Admin" })">
                                <i class="glyphicon glyphicon-dashboard"></i> Dashboard
                            </a>
                        </li>
                        <li>
                            <a href="#" data-toggle="collapse" data-target="#membership">
                                <i class="glyphicon glyphicon-user"></i> Membership <i class="glyphicon glyphicon-chevron-down"></i>
                            </a>
                            <ul id="membership" class="collapse">
                                <li>
                                    <a href="@Url.Action("Index", "User", new { area = "Admin" })">Manage Users</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Role", new { area = "Admin" })">Manage Roles</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#" data-toggle="collapse" data-target="#content">
                                <i class="glyphicon glyphicon-education"></i> Content <i class="glyphicon glyphicon-chevron-down"></i>
                            </a>
                            <ul id="content" class="collapse">
                                <li>
                                    <a href="@Url.Action("Index", "AdminTopic", new { area = "Admin" })">Manage Topic</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "AdminLesson", new { area = "Admin" })">Manage Lesson</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "AdminWord", new { area = "Admin" })">M>Manage Words</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="mainadminbody">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>