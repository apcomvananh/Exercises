@using TOEICEssentialWords.Web.Areas.Admin.ViewModels
@model UserListViewModel

@{
    ViewBag.Title = "Manage Users";
}

<div class="panel">
    <div class="panel-heading">
        <h5>@ViewBag.Title</h5>
    </div>
    <div class="panel-content">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Edit</th>
                    <th>Username</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Roles</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("Edit", new { user.Id })" class="btn-mvc">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => user.UserName)</strong>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => user.FirtName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => user.LastName)
                        </td>
                        <td>
                            <span class="listrolecbholder">
                                @foreach (var role in @Model.AllRoles)
                                {
                                    var showChecked = user.Roles.Contains(role.Name) ? "checked='checked'" : "";
                                    <span class="listrolecb">
                                        <input type="radio" name="Roles-@user.Id" value="@role.Name" @showChecked /> @Html.Raw(role.Name)
                                    </span>
                                }
                                <input type="hidden" id="userId" value="@user.Id" />
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>