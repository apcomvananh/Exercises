@using TOEICEssentialWords.Web.Areas.Admin.ViewModels
@model RoleViewModel

<div class="modal-dialog" role="document">
    <div class="modal-content">
        @using (Ajax.BeginForm("Create", "Role", FormMethod.Post, new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST",
            UpdateTargetId = "roleModal",
            OnSuccess = "role.Success(data)"
        }))
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="roleModalLabel">Create New Role</h4>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary()
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="recipient-name" class="control-label">Role name:</label>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-green">Create</button>
                <button type="button" class="btn btn-red" data-dismiss="modal">Cancel</button>
            </div>
        }
    </div>
</div>
