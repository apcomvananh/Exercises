@using TOEICEssentialWords.Web.Areas.Admin.ViewModels
@model RoleListViewModel

@{
    ViewBag.Title = "Manage Roles";
}

@Html.Hidden("CreateRoleUrl", Url.Action("Create"))
@Html.Hidden("EditRoleUrl", Url.Action("Edit"))
<div class="row">
    <div class="col-lg-12">
        <div class="back-button">
            <div class="btn-group" role="group">
                <button class="btn btn-success" onclick="Role.CreateRole()">Add new role</button>
            </div>
        </div>
        <div class="panel main-panel">
            <div class="panel-heading">
                <h5>@ViewBag.Title</h5>
            </div>
            <div class="panel-content">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Edit</th>
                            <th>Role Name</th>
                            <th>Users In Role</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model.Roles)
                        {
                            var usersInRole = role.Users.Count;
                            <tr>
                                <td>
                                    <a href="#" onclick="Role.EditRole(@role.Id)" class="btn btn-warning">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                </td>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => role.Name)</strong>
                                </td>
                                <td>@usersInRole</td>
                                <td>
                                    <a href="@Url.Action("Delete", new { role.Id })" class="btn btn-danger">
                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal fade" id="roleModal" tabindex="-1" role="dialog" aria-labelledby="roleModalLabel">
        </div>
    </div>
</div>