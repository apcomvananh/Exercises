@using TOEICEssentialWords.Web.ViewModels
@model LessonViewModel

@{
    ViewBag.Title = Model.Name;
}

<div class="row content-header">
    <div class="col-lg-12">
        <span>&nbsp;</span>
        <h2>@Model.Name</h2>
        <span>&nbsp;</span>
        <span class="pos">Lesson</span>
    </div>
</div>
<div class="row content-body">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">WORDS TO LEARN</div>
            <div class="panel-body">
                <ul>
                    @foreach (var word in Model.WordsToLearn)
                    {
                        <li>
                            <a href="@Url.Action("Index", "Word", new { slug = word.Slug })">@word.Name</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <p>Explore other lessons relate to @Model.Name</p>
        <h4 class="main-topic-title">@Model.TopicName</h4>
        <h6>Related lessons:</h6>
        <ul>
            @foreach (var lesson in Model.RelatedLessons)
            {
                <li><a href="@Url.Action("Index", "Lesson", new { id = lesson.Id })">@lesson.Name</a></li>
            }
        </ul>
    </div>
</div>