<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 600 Essential words for the TOEIC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".topic-menu">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-form navbar-center searchfield">
                    @using (Html.BeginForm("SearchWord", "Word", FormMethod.Post))
                    {
                        <div class="input-group add-on">
                            @Html.TextBox("searchWord", null, new { @class = "form-control", placeholder = "Search English" })
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>

                    }
                </div>
                <ul class="nav navbar-right top-nav">
                    <li><a href="#">Register</a></li>
                    <li><a href="#">Login</a></li>
                </ul>
                @Html.Action("TopicMenu", "Topic")
            </div>
        </nav>
    </header>
    <main>
        <div id="page_wrapper">
            <div class="container">
                <section id="section_body">
                    <div class="content-wrapper">
                        @RenderBody()
                    </div>
                </section>
            </div>
        </div>
    </main>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>